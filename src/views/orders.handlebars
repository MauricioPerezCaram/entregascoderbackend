<main class="flex-grow-1 w-100 d-flex flex-column">
  <h2 class="subtitle mt-4 mb-2 text-center">Mi carrito</h2>
  {{#if message}}
    message
  {{else}}
    <section
      id="products"
      class="d-flex flex-column justify-content-center align-items-center m-auto mt-2 mb-4 bg-light"
      style="width: 500px;"
    >
      <article class="w-100 d-flex border border-dark">

        <p
          style="width: 100px;"
          class="d-flex justify-content-end align-items-center m-0 p-2 fw-bold"
        >Producto</p>
        <p
          style="width: 100px;"
          class="d-flex justify-content-end align-items-center m-0 p-2 fw-bold"
        >Precio por unidad</p>
        <p
          style="width: 100px;"
          class="d-flex justify-content-end align-items-center m-0 p-2 fw-bold"
        >Cantidad</p>
        <p
          style="width: 100px;"
          class="d-flex justify-content-end align-items-center m-0 p-2 fw-bold"
        >Estado</p>

      </article>
      {{#each orders}}
        <article class="w-100 d-flex border border-dark">
          <p
            style="width: 100px;"
            class="d-flex justify-content-end align-items-center m-0 p-2 fw-bold"
          >{{this.product_id.title}}
          </p>
          <p
            style="width: 100px;"
            class="d-flex justify-content-end align-items-center m-0 p-2 fw-bold"
          >USD {{this.product_id.price}}</p>
          <p
            style="width: 100px;"
            class="d-flex justify-content-end align-items-center m-0 p-2 fw-bold"
          >{{this.quantity}}
          </p>
          <p
            style="width: 100px;"
            class="d-flex justify-content-end align-items-center m-0 p-2 fw-bold"
          >{{this.state}}
          </p>

          <span
            class="d-flex justify-content-center align-items-center m-0 p-2"
            style="width: 60px;"
          >
            <img
              class="deleteButton"
              id={{this._id}}
              src="data:image/png;base64,"
            />
          </span>
        </article>
      {{/each}}
    </section>
    <span class="w-100 d-flex justify-content-center">
      {{#if prev}}
        <a
          class="btn btn-dark fs-5 m-4 mt-0"
          href="/?title={{filter}}&page={{prev}}"
        >PREV</a>
      {{/if}}
      {{#if next}}
        <a
          class="btn btn-dark fs-5 m-4 mt-0"
          href="/?title={{filter}}&page={{next}}"
        >NEXT</a>
      {{/if}}
    </span>
  {{/if}}
</main>
<script src="/scripts/orders.js"></script>