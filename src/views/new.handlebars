<main class="flex-grow-1 p-3 m-auto my-2">
  <h2 class="text-center">Crea un producto</h2>
  <form style="width: 320px;">
    <div class="mb-3 text-center">
      <label for="name" class="form-label mb-0">Nombre</label>
      <input
        type="text"
        class="form-control"
        id="nombre"
        aria-describedby="emailHelp"
      />
    </div>
    <div class="mb-3 text-center">
      <label for="foto" class="form-label mb-0">Foto</label>
      <input type="text" class="form-control" id="foto" />
    </div>
    <div class="mb-3 text-center">
      <label for="precio" class="form-label mb-0">Precio</label>
      <input type="number" class="form-control" id="precio" />
    </div>
    <div class="mb-3 text-center">
      <label for="stock" class="form-label mb-0">Stock</label>
      <input type="number" class="form-control" id="stock" />
    </div>

    <button
      type="button"
      class="w-100 btn btn-danger"
      id="createproduct"
    >Crear</button>
  </form>
</main>

<script src="/scripts/createproduct.js"></script>